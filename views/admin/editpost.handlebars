<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">EDİT POST</h1>
</section>

<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">EDİT POST</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" name="title" type="text" placeholder="Post title *"
                                    required="required" value="{{post.title}}"
                                    data-validation-required-message="Please enter your post title name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="content" type="text" placeholder="Your Content *"
                                    required="required" data-validation-required-message="Please enter your content."
                                    cols="30" rows="10">{{post.content}}</textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="category">
                                    {{#each categories}}
                                    {{#if status}}
                                    <option value="{{_id}}" selected="selected">{{name}}</option>
                                    {{else}}
                                    <option value="{{_id}}">{{name}}</option>
                                    {{/if}}
                                    {{/each}}
                                </select>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <div class="blog-img">
                                    <img src="{{post.post_image}}" class="img-fluid">
                                </div>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="post_image" type="file" value="{{post.post_image}}">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="addPostButton" class="main-btn" type="submit">Edit Post</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>